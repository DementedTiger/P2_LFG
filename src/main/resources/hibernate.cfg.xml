<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgresPlusDialect</property>

        <property name="hibernate.connection.url"/>
        <property name="hibernate.connection.username"/>
        <property name="hibernate.connection.password"/>

        <property name="show_sql">true</property>
        <property name="hibernate.connection.pool_size">5</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <property name="hibernate.hbm2ddl.auto">validate</property>

        <mapping class="com.revature.p2_lfg.repository.entities.user.UserCredential"/>
        <mapping class="com.revature.p2_lfg.repository.entities.user.UserProfile"/>
        <mapping class="com.revature.p2_lfg.repository.entities.user.Socials"/>
        <mapping class="com.revature.p2_lfg.repository.entities.session.Games"/>
        <mapping class="com.revature.p2_lfg.repository.entities.session.Tag"/>
        <mapping class="com.revature.p2_lfg.repository.entities.session.SessionDetails"/>
        <mapping class="com.revature.p2_lfg.repository.entities.session.Session"/>
        <mapping class="com.revature.p2_lfg.repository.entities.compositeKeys.GroupSessionId"/>
        <mapping class="com.revature.p2_lfg.repository.entities.compositeKeys.SocialId"/>
        <mapping class ="com.revature.p2_lfg.repository.entities.user.UserReports"/>
        <mapping class ="com.revature.p2_lfg.repository.entities.user.ReportTagTable" />
        <mapping class ="com.revature.p2_lfg.repository.entities.user.CommendTagTable" />
        <mapping class ="com.revature.p2_lfg.repository.entities.user.UserCommends" />
        <mapping class ="com.revature.p2_lfg.repository.entities.user.UserScore" />

    </session-factory>
</hibernate-configuration>