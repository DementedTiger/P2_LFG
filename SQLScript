set search_path to project_two;

drop table lfg_user_profile ;
create table lfg_user_profile(
columnID serial primary key,
userID integer unique not null references lfg_user_creds(userID),
firstName text ,
lastName text,
email varchar unique not null
);
select * from lfg_user_profile lup ;
insert into lfg_user_profile values (default, 1, 'Jon','Jones','bestp4p@gmail.com');

drop table lfg_user_creds cascade;
create table lfg_user_creds (
userID serial primary key,
userLogin varchar unique not null,
userPass varchar not null
);
select * from lfg_user_creds luc ;
insert into lfg_user_creds values (default,'sweatyboi','password1');

drop table lfg_socials cascade;
create table lfg_socials (
socialID serial primary key,
platform varchar unique not null
);

select * from lfg_socials ls ;

drop table lfg_games cascade;
create table lfg_games(
gameID serial primary key,
gameTitle varchar unique not null,
imgLink varchar
);
select * from lfg_games lg ;


drop table lfg_public_details cascade;
create table lfg_public_details (
columnID serial primary key,
userID integer references lfg_user_creds(userID),
gameID integer references lfg_games(gameID),
gamerTag varchar unique not null
);
select * from lfg_public_details lpd ;


create table user_reports(
reportID serial primary key,
reportingUser integer unique not null references lfg_user_creds (userID),
reportedUser integer unique not null references lfg_user_creds (userID),
reportTag integer not null references report_tag_table(reportTagID),
description varchar,
incidentDate date not null,
reviewStatus boolean not null
);
select * from user_reports;


create table user_commends(
commendID serial primary key,
commendingUser integer unique not null references lfg_user_creds (userID),
commendedUser integer unique not null references lfg_user_creds (userID),
commendTag integer not null references commend_tag_table(commendTagID),
description varchar,
commendDate date not null
);
select * from user_commends;


drop table report_tag_table ;
create table report_tag_table(
reportTagID integer primary key,
value text unique not null
);
insert into report_tag_table values (1,'Trolling'), (2, 'Raging'), (3, 'AFK');
select * from report_tag_table;

drop table commend_tag_table ;
create table commend_tag_table(
commendTagID integer primary key,
value text unique not null
);
insert into commend_tag_table values (1,'Friendly'), (2, 'Funny'), (3, 'Certified Gamer');
select * from commend_tag_table ;


create table user_score(
scoreID integer primary key,
userID integer unique not null references lfg_user_creds(userID),
rating integer not null
);
select * from user_score;
